{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build all",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4","all"]
        },
        {
            "label": "Build clean",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["clean"]
        },
        {
            "label": "STflash",
            "group": "build",
            "type": "shell",
            "command": "make",
            "args": ["-j4","stflash"] // -j<number> number being the number of cores you assign to a command
        }
    ]
}