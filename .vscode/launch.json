// Configure debug launch settings
// Feel free to copy these and modify them for your debugger and MCU
{
    "version": "0.2.0",
    "projectName": "misko3-tetris",
    "configurations": [
        {
            "name": "STlink debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/misko3-tetris.elf",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stutil",
            "device": "STM32G474xx",
            "interface": "swd",
            "runToEntryPoint": "main", // else it starts at reset handler - not interested
            "preLaunchTask": "Build all", // configured in tasks.json
            "preLaunchCommands": ["make -j4"], // you can execute command instead of task
            "svdFile": "${workspaceRoot}/STM32g474.svd", // Include svd to watch device peripherals [https://github.com/tinygo-org/stm32-svd/tree/main/svd]
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 100000000,
                "swoFrequency": 4000000,
                "source": "probe",
                "decoders": [
                    {
                        "label": "ITM prot 0 output",
                        "type": "console",
                        "port": 0,
                        "showOnStartup": true,
                        "encoding": "ascii"
                    }
                ]
            } 
        },
        {
            "name": "STlink attach",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/misko3-tetris.elf",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "stutil",
            "device": "STM32g474xx",
            "interface": "swd",
            "runToEntryPoint": "main", // else it starts at reset handler - not interested
            "preLaunchTask": "Build all", // configured in tasks.json
            // "preLaunchCommands": ["Build all"], // you can execute command instead of task
            "svdFile": "${workspaceRoot}/STM32g474.svd", // Include svd to watch device peripherals [https://github.com/tinygo-org/stm32-svd/tree/main/svd]
            "swoConfig": {} // currently (v1.7.0) not supported
        },
    ]
}